<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorBackground"/>
        </shape>
    </item>


    <item>
        <shape android:shape="ring"
            android:useLevel="false"
            android:thickness="3dp">

            <gradient android:angle="0" android:type="linear" android:startColor="@color/colorGradientLight"
                android:endColor="@color/colorGradientDark"/>
        </shape>
    </item>

</layer-list>
